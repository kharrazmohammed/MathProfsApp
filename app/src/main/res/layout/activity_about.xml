<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/mulishblack"
        android:text="◀ Retour"
        android:textColor="#1E2D33"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mulishbold"
        android:text="À propos de"
        android:textColor="#1E2D33"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mulishextrabold"
        android:text="MathsProfs+"
        android:textColor="#FF197D"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titre" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MathsProfs+ est une application mobile destinée aux professeurs de mathématiques du collège.\nElle permet d'accéder facilement à des ressources pédagogiques utiles :"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/mulishmedium"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mulishmedium"
        android:lineSpacingExtra="4dp"
        android:text="• fiches pédagogiques\n• résumés de cours\n• series exercices\n• activités interactives."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <TextView
        android:id="@+id/objectif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Conçue pour faciliter la préparation des cours et enrichir la pratique enseignante."
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/mulishmedium"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/liste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/signature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Réalisée par :\nMOHAMMED KHARAZ\nProfesseur de mathématiques stagiaire – CRMEF Safi (2025)"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/mulishmedium"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/objectif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
