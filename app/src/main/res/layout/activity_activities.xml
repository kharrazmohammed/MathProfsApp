<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBackActivite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_left"
            android:contentDescription="Retour"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvRetouractivite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:textColor="#1E2D33"
            android:textSize="18sp"
            android:fontFamily="@font/mulishmedium"
            android:paddingStart="4dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activités interactives Geogebra"
        android:textAlignment="center"
        android:textSize="26sp"
        android:fontFamily="@font/mulishbold"
        android:textStyle="bold"
        android:textColor="#1E2D33"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etSearchgeogebra"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Rechercher des Activités Geogebra"
        android:fontFamily="@font/mulishregular"
        android:textSize="16sp"
        android:textColor="@color/searchhint"
        android:textColorHint="@color/searchhint"
        android:drawableStart="@drawable/searchicon"
        android:drawablePadding="12dp"
        android:background="@drawable/bg_search_rounded"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="16dp" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvgeogebra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false" />
</LinearLayout>
